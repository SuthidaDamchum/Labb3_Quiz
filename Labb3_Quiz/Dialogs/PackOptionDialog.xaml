<Window x:Class="Labb3_Quiz.Dialogs.PackOptionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_Quiz.Views"
        xmlns:viewmodels="clr-namespace:Labb3_Quiz.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:QuestionPackViewModel}"
        mc:Ignorable="d"
        Title="Pack Options" Height="250" Width="200" FontSize="12" 
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Pack Name:" FontWeight="Bold"/>
        <TextBox Grid.Row="0" Margin="0,20,0,10"
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />


        <TextBlock Grid.Row="1" Text="Difficulty:" FontWeight="Bold" Margin="0,10,0,0"/>
        <ComboBox Grid.Row="1" Margin="0,30,0,10"
                  SelectedItem="{Binding Difficulty}"
                  ItemsSource="{Binding DifficultyOptions}" />

        <TextBlock Grid.Row="2" Margin="0,10,0,0"
                   Text="Time Limit (seconds):" FontWeight="Bold"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,30,0,10" VerticalAlignment="Center">
            <Slider x:Name="TimeSlider"
            Minimum="10" Maximum="60"
            TickFrequency="5"
            IsSnapToTickEnabled="True"
            Ticks="10,15,20,25,30,35,40,45,50,55,60"  TickPlacement="BottomRight"
            Value="{Binding TimeLimitInSeconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Width="130"
            HorizontalAlignment="Left"/>

            <TextBlock Text="{Binding TimeLimitInSeconds, UpdateSourceTrigger=PropertyChanged}" 
                       Margin="6,0,2,0"/>
            <TextBlock FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
