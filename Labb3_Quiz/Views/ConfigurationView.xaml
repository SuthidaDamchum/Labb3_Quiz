<UserControl x:Class="Labb3_Quiz.Views.ConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:Labb3_Quiz.Views"
             xmlns:conv="clr-namespace:Labb3_Quiz.Converters"
             xmlns:viewmodels="clr-namespace:Labb3_Quiz.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:ConfigurationViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FontSize="12" >

    <UserControl.Resources>
        <Style x:Key="BoldLabel" TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <Label Content="{Binding ActivePack.Name, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Grid.Column="0" Style="{StaticResource BoldLabel}" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="0" Margin="0 0 3 0" >
            <Button x:Name="PackOptions" Width="15" Height="15" Margin="2" 
                    
            Command="{Binding DataContext.OpenPackOptionsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
            CommandParameter="{Binding DataContext.ConfigurationViewModel.ActiveQuestion, RelativeSource={RelativeSource AncestorType=Window}}">
              <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="12" Text="&#xE700;"/>
            </Button>
            
            <Button x:Name="Add" Width="15" Height="15" Margin="2" Command="{Binding NewQuestionCommand}">
                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="12" Text="&#xE710;"/>
            </Button>
            
            <Button x:Name="Minus" Width="15" Height="15" Margin="2" Command="{Binding RemoveQuestionCommand}" CommandParameter="{Binding ActiveQuestion}">
                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="12" Text="&#xE921;"/>
            </Button>
        </StackPanel>

        <ListBox Grid.Row="1" Margin="5"
         ItemsSource="{Binding ActivePack.Questions}"
         SelectedItem="{Binding ActiveQuestion}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Question: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding Query}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <StackPanel Grid.Column="1" Grid.RowSpan="2" Margin="10"
                    Visibility="{Binding ActiveQuestion, Converter={StaticResource NullToVisibilityConverter}}">


            <Label Content="Question:" FontWeight="Bold"/>
            <TextBox Height="120" Text="{Binding ActiveQuestion.Query, UpdateSourceTrigger=PropertyChanged}" Margin="0"/>

            <Label Content="Correct answer:" FontWeight="Bold"/>
            <TextBox Text="{Binding ActiveQuestion.CorrectAnswer, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

            <Label Content="First incorrect answer:" FontWeight="Bold"/>
            <TextBox Text="{Binding ActiveQuestion.IncorrectAnswers[0], UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

            <Label Content="Second incorrect answer:" FontWeight="Bold"/>
            <TextBox Text="{Binding ActiveQuestion.IncorrectAnswers[1], UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

            <Label Content="Third incorrect answer:" FontWeight="Bold"/>
            <TextBox Text="{Binding ActiveQuestion.IncorrectAnswers[2], UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
            
        </StackPanel>
    </Grid>
</UserControl>


