<Application x:Class="Labb3_Quiz.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Labb3_Quiz"
             xmlns:vm="clr-namespace:Labb3_Quiz.ViewModels"
             xmlns:views="clr-namespace:Labb3_Quiz.Views">
    
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:ConfigurationViewModel}">
            <views:ConfigurationView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:PlayerViewModel}">
            <views:PlayerView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:PlayerPointViewModel}">
            <views:PlayerPointView />
        </DataTemplate>
        
    </Application.Resources>
</Application>
 